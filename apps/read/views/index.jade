extends ../../../views/layout                                                                                                                                                   

block content
    header
      h1.text-center
        if(amount)
          span= amount
        =title

      if(user)
        div(class="user-control")
          span(class="fa fa-user username")=user.username

        div(class="sign-out")
          a(href="/logout")
            span(class="fa fa-sign-out") SignOut

    div.main-container
      div.form-selector
        button(class="openform btn btn-info btn-block") Add a new book

      include _form
      div.list-container
        table.center-table.list-wrapper.table.table-striped.table-condensed
          thead
            tr
              th #
              th Title
              th Author
              th Date Added
              th Type
              th Lang
              th Rating
              th Cover
              th Delete
          <!-- beginning table body -->
          include _booktable
    script(src="xhr.js")
    script(src="util.js")
    script(src="main.js")
